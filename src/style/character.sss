.player.up::after
  background: #33291f
  background-image: linear-gradient(#e6af8a, #e6af8a)
  background-repeat: no-repeat
  background-size: 70% 20%
  background-position: top right
.player.up::before
  background-image: none
.player.up > .glasses
  transform: rotateY(90deg) rotateX(270deg) translate3d(.25em, 0, -.30em) //skewX(10deg)


.player.down::after
  background: #33291f
  background-image: linear-gradient(#e6af8a, #e6af8a)
  background-repeat: no-repeat
  background-size: 70% 20%
  background-position: bottom right

.player.down::before
  background: #e6af8a
  background-image: linear-gradient(#4d3e2f, #4d3e2f)
  background-size: 100% 30%
  background-repeat: no-repeat

.player.down > .glasses
  transform: rotateY(90deg) rotateX(270deg) translate3d(.25em, 0, .30em) //skewX(10deg)


.player.left::after
  background: #33291f

.player.left::before
  background-image: linear-gradient(#e6af8a, #e6af8a)
  background-repeat: no-repeat
  background-size: 20% 70%
  background-position: bottom left

.player.left > .glasses
  transform: rotateY(90deg) translate3d(.25em, 0, -.30em) //skewX(10deg)


@keyframes jump
  // 0%
  //  transform: translate3d(.25em, .25em, 1.8em) scale3d(.9,.9,1)
  0%
    transform: translate3d(.25em, .25em, 1.8em) scale3d(.9,.9,1)
  40%
    transform: translate3d(.25em, .25em, 1.8em) scale3d(.9,.9,1)
